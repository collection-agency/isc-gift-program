<section class="mb-32">
  <div class="flex flex-wrap lg:flex-nowrap -mx-4 px-4">
    <div class="w-full lg:w-3/5 px-4 mb-16">
      <img src="{{ collections.isc-gift-program.image.src | img_url: '1700x' }}" alt="{{ product.featured_image.alt | escape }}">
    </div>
    <div class="w-full lg:w-2/5 px-4 mb-16 flex flex-col justify-between">
      <h1 class="text-4xl md:text-6xl lg:text-5xl xl:text-6xl text-center mb-16 leading-snug font-heading">Give the gift<br> of analog...<br></h1>
      <div class="text-xl md:text-2xl lg:text-xl xl:text-3xl">
        <div class="text-center mb-12 max-w-prose leading-snug">{{ collections.isc-gift-program.description }}</div>
        <div class="text-center mb-12"><span>Scroll down to see &#8595;</span></div>
      </div>
    </div>
  </div>
</section>

<section class="mb-16">
  <h2 class="mb-16 px-4 font-heading">Gift Options</h2>
  <div class="flex flex-wrap md:flex-nowrap -mx-4 px-4">
    {% for product in collections.isc-gift-program.products limit:4 %}
      <div class="w-full md:w-1/3 px-4 mb-16">
        <div class="mb-6">
          <a href="{{ product.url | within: collection }}">
            <img src="{{ product.featured_image.src | img_url: '1000x' }}" alt="{{ product.featured_image.alt | escape }}">
          </a>
        </div>
        <div>
          <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
        </div>
        <div>
          {% if product.available %}{{ product.price | money }}{% else %}<strong>sold out</strong>{% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>
