<header class="bg-green-pale py-5 font-heading">
  <div class="container mx-auto">
    <div class="flex -mx-4 px-4 items-center">
      <div class="px-4 w-1/2">
        <a href="/"><img src="{{ 'ischifi-logo.svg' | asset_url }}" class="hidden md:block w-20" alt="ISCHifi"/><img src="{{ 'ischifi-logo-mobile.svg' | asset_url }}" class="block md:hidden w-24" alt="ISCHifi"/></a>
      </div>

      <div class="flex flex-wrap md:flex-no-wrap md:w-1/2 text-sm md:text-base">
        <div class="px-4 w-full md:w-1/2 text-right md:text-left mb-2 md:mb-0">
          <a href="https://insheepsclothinghifi.com/">Back to In Sheep's Clothing HiFi</a>
        </div>
        <div class="px-4 w-full md:w-1/2 text-right">
          <a href="/cart">ISC Record Club Cart &#8594; <img src="{% if cart.item_count > 0 %}{{ 'shopping-cart-full.svg' | asset_url }}{% else %}{{ 'shopping-cart-empty.svg' | asset_url }}{% endif %}" class="inline-block w-4 md:w-6 ml-6" alt="Cart"/> ({{ cart.item_count }})</a>
        </div>
      </div>
    </div>
  </div>
</header>
